# Database Configuration
# For Railway: Use DATABASE_URL (provided automatically when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Or use individual settings for local development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fleet_management
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# GPS Device API Key (for hardware devices)
GPS_API_KEY=your_gps_device_api_key

# Frontend URL (for CORS) - Update this after deploying frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
