{
  "name": "fleet-management-server",
  "version": "1.0.0",
  "description": "Backend API for Fleet Management System with GPS tracking and fuel monitoring",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "npm run migrate && npm run seed && node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "knex migrate:latest --env production",
    "migrate:rollback": "knex migrate:rollback --env production",
    "seed": "knex seed:run --env production",
    "simulate": "node src/simulator.js",
    "build": "echo 'Build complete'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
